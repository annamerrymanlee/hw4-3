<h1>New Entry</h1>

<div class="container">
  <%= form_with model: @entry, local: true, multipart: true do |form| %>
    <!-- Hidden field for place_id -->
    <%= form.hidden_field :place_id, value: params["place_id"] %>

    <!-- Title input -->
    <div class="mb-3">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <!-- Description input -->
    <div class="mb-3">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <!-- Occurred On input -->
    <div class="mb-3">
      <%= form.label :occurred_on, class: "form-label" %>
      <%= form.date_select :occurred_on, class: "form-control" %>
    </div>

    <!-- Image input -->
    <div class="mb-3">
      <%= form.label :image, class: "form-label" %>
      <%= form.file_field :image, class: "form-control" %>
    </div>

    <!-- Submit button -->
    <div class="mb-3">
      <%= form.submit 'Create Entry', class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<p>
  <a href="/places">Back to All Places</a>
</p>

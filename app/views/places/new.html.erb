<!-- app/views/places/new.html.erb -->

<div class="container mt-5">
  <!-- Page Title -->
  <h1 class="text-center mb-4">Create a New Place</h1>

  <!-- Centered form -->
  <div class="row justify-content-center">
    <div class="col-md-6">
      <!-- Card wrapper for the form -->
      <div class="card p-4 shadow">
        <!-- Form for creating a new place -->
        <%= form_with model: @place, local: true, class: 'form' do |form| %>
          <!-- Name input field -->
          <div class="form-group">
            <%= form.label :name, 'Place Name', class: 'form-label' %>
            <%= form.text_field :name, class: 'form-control' %>
          </div>

          <!-- Submit button -->
          <%= form.submit 'Create Place', class: 'btn btn-primary w-100' %>
        <% end %>

        <!-- Link back to Places index page -->
        <div class="mt-3">
          <%= link_to 'Back to Places', places_path, class: 'btn btn-secondary w-100' %>
        </div>
      </div>
    </div>
  </div>
</div>

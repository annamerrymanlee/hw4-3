<!-- app/views/places/index.html.erb -->

<div class="container mt-5">
  <!-- Page Title -->
  <h1 class="text-center mb-4">Places</h1>

  <!-- If there are places, display them -->
  <% if @places.any? %>
    <div class="row">
      <!-- Loop through places and display each one in a card-like structure -->
      <% @places.each do |place| %>
        <div class="col-md-4 mb-4">
          <div class="card shadow-sm">
            <div class="card-body">
              <h5 class="card-title">
                <%= link_to place.name, place_path(place), class: 'card-link' %>
              </h5>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- Message when no places are found -->
    <p class="text-center">No places found.</p>
  <% end %>

  <!-- Button to create a new place -->
  <div class="text-center mt-4">
    <%= link_to 'Create New Place', new_place_path, class: 'btn btn-primary' %>
  </div>
</div>
